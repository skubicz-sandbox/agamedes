<idea-plugin>
    <id>com.jetkub.my-plugin</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
      Sample plugin.<br>
    ]]></description>

    <change-notes><![CDATA[
      Release 0.0.1: Initial release.<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="myToolWindow.MyMavenRunConfigurationType"/>

        <toolWindow id="Maven Executor" secondary="true" icon="/myToolWindow/plus.png" anchor="right"
            factoryClass="com.kubicz.mavenexecutor.window.MavenExecutorToolWindowFactory" />

        <projectService serviceImplementation="com.kubicz.mavenexecutor.window.MavenExecutorToolWindow"/>
        <projectService serviceImplementation="com.kubicz.mavenexecutor.window.MavenExecutorService"/>
    </extensions>

    <actions>
        <group id="EasyMavenBuilder.FavoriteItemContextMenu">
            <action id="EasyMavenBuilder.RemoveFavorite"
                    class="RemoveFavoriteAction"
                    text="Remove" />
        </group>

        <group id="EasyMavenBuilder.ActionsToolbar">
            <action id="EasyMavenBuilder.MavenReimport"
                icon="AllIcons.Actions.Refresh"
                class="MavenReimportAction"
                text="Reimport All Maven Projects" />

            <separator/>

            <action id="EasyMavenBuilder.JvmOptionsDialog"
                icon="AllIcons.General.GearPlain"
                class="OpenJvmOptionsDialogAction"
                text="Jvm Options" />

            <action id="EasyMavenBuilder.OpenEnvironmentVariablesDialog"
                icon="AllIcons.Javaee.WebServiceClient"
                class="OpenEnvironmentVariablesDialogAction"
                text="Environment Variables" />

            <action id="EasyMavenBuilder.OpenMavenSettings"
                class="OpenMavenSettingsAction" text="Maven Settings"
                description="Edit Maven integration settings for the current project"
                icon="AllIcons.General.ProjectSettings">
            </action>

            <action id="EasyMavenBuilder.SaveSettings"
                    class="SaveSettingsAction" text="Save Settings"
                    description="Edit Maven integration settings for the current project"
                    icon="AllIcons.Actions.Menu_saveall">
            </action>
        </group>

        <action id="EasyMavenBuilder.RunMaven"
                icon="AllIcons.General.Run"
                class="MavenReimportAction"
                text="Reimport All Maven Projects" />

    </actions>
</idea-plugin>